<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_payment_pivot" model="ir.ui.view">
         <field name="name">sale.order.payment.pivot</field>
         <field name="model">sale.order.payment.report</field>
         <field name="arch" type="xml">
             <pivot string="SO payments">
               <field name="sale_order_id" type="col"/>
               <field name="date" interval="month" type="row"/>
               <field name="residual" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="action_sale_order_payments" model="ir.actions.act_window">
        <field name="name">SO payments</field>
        <field name="res_model">sale.order.payment.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
    </record>

</odoo>
