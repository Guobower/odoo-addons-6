<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record model="ir.ui.view" id="account_invoice_form_financial_planning">
        <field name="name">account.invoice.form.financial.planning</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
              <field name="financial_date"/>
              <field name="financial_forecast_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="account_invoice_tree_financial_planning">
        <field name="name">account.invoice.tree.financial.planning</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="date_invoice" position="after">
              <field name="financial_date"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="account_invoice_supplier_tree_riba">
        <field name="name">account.invoice.supplier.tree.riba</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="date_due" position="after">
              <field name="financial_date"/>
              <field name="financial_forecast_id" readonly='True'/>
            </field>
        </field>
    </record>

</odoo>
