<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="account_bank_statement_line_tree_financial_planning" model="ir.ui.view">
    <field name="name">account_bank_statement_line_financial_planning</field>
    <field name="model">account.bank.statement</field>
    <field name="inherit_id" ref="account.view_bank_statement_form"/>
    <field name="arch" type="xml">
        <field name="amount" position="after">
          <field name="financial_date"/>
          <field name="from_forecast" string="FC"/>
          <field name="financial_forecast_id"/>
        </field>
    </field>
  </record>

</odoo>
