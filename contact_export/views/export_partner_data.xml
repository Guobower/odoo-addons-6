<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record id="wizard_partner_export" model="ir.ui.view">
        <field name="name">Export contatti</field>
        <field name="model">partner.complete.export</field>
        <field name="arch" type="xml">
            <form string="Export Translations">
              <field name="name" invisible='1'/>
              <field name="state" invisible='1'/>
              <div attrs="{'invisible':[('state', '!=', 'choose')]}">
                <p>Clicca in basso su "Export" per eseguire l'export dei dati.</p>
              </div>
              <div attrs="{'invisible':[('state', '!=', 'get')]}">
                  <p>Ecco il link al file con i dati richiesti:
                    <field name="data" readonly="1" filename="name"/></p>
              </div>

              <footer attrs="{'invisible':[('state', '!=', 'choose')]}">
                  <button name="act_getfile" string="Export"
                          type="object" class="oe_highlight"/> or

                  <button special="cancel" string="Cancel"
                          type="object" class="oe_link"/>
              </footer>

              <footer attrs="{'invisible':[('state', '!=', 'get')]}">
                  <button special="cancel" string="Close" type="object"/>
              </footer>
            </form>
        </field>
    </record>

  <!-- Contatti  menu
  parent="visionup_projects.menu_overall_contacts_group"
-->
  <act_window id="action_export_contacts"
    name="Esporta contatti"
    res_model="partner.complete.export"
    view_mode="form"
    target="new"/>

  <menuitem id='menu_export_contacts'
    string="Esporta contatti"
    action="action_export_contacts"/>
</data>
</openerp>
