<?xml version="1.0" encoding="utf-8"?>

<odoo>

   <record model="ir.ui.view" id="pspes_project_task_form_edits">
        <field name="name">pspes.project.task.form.edits</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="officer_id" required="True"/>
                <field name="installation_id" required="True"/>
            </field>
            <page name="description_page" position="after">
                <field name="attachment_ids">
                    <tree editable="True">
                        <field name="name"/>
                        <field name="task_id"/>
                        <field name="officer_id"/>
                        <field name="condominium_id"/>
                        <field name="res_model"/>
                        <field name="type"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="create_uid"/>
                        <field name="create_date"/>
                        <field name="datas"/>
                    </tree>
                </field>
            </page>
        </field>
    </record>

</odoo>
